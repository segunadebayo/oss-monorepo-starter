    "build": "lerna run build",
    "publish": "changeset publish",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "plop": "ts-node -P tsconfig.node.json scripts/plopfile.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
