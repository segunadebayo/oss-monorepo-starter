    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "typescript": "^4.0.5",
    "ts-node": "8.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "shelljs": "^0.8.4",
    "cross-env": "^7.0.2",
    "concurrently": "^5.3.0",
    "jest-watch-typeahead": "^0.6.1",
