  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "description": "Template for setting up a TypeScript monorepo",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "contributors:init": "all-contributors init",
    "contributors:gen": "all-contributors generate",
    "clean": "lerna run clean && rm -rf node_modules & rm -rf yarn.lock",
